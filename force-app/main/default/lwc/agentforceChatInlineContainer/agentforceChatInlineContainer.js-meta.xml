<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>66.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Agentforce Chat Inline Container</masterLabel>
    <description>A target container for displaying Agentforce chat inline. Place this component where you want the chat to appear. The main Agentforce Chat component will project the chat UI into this container.</description>
    <targets>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="configJson" type="String" label="Configuration" description="Full component configuration" editor="c/agentforceChatInlineContainerCPE"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
