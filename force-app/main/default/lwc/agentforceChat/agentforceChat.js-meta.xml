<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>66.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Agentforce Chat</masterLabel>
    <description>Core Agentforce Chat component. Initializes Embedded Service Deployment (Enhanced Web V2). If an agentforceChatInlineContainer component exists on the page, the chat UI is projected into it. Otherwise displays as a floating FAB.</description>
    <capabilities>
        <capability>lightningCommunity__RelaxedCSP</capability>
    </capabilities>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="configJson" type="String" label="Configuration" description="Full component configuration" editor="c/agentforceChatCPE"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
